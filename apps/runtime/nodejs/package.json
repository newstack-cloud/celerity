{
  "name": "celerity-runtime-nodejs",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "yarn@4.3.1",
  "scripts": {
    "start": "node --import ./register-hooks.mjs --import @celerity-sdk/telemetry/setup index.mjs",
    "dev": "node --import ./register-hooks.mjs --import tsx --import @celerity-sdk/telemetry/setup --watch-path=${CELERITY_APP_DIR:-./app} index.mjs"
  },
  "dependencies": {
    "@celerity-sdk/common": "^0.3.0",
    "@celerity-sdk/config": "^0.3.0",
    "@celerity-sdk/core": "^0.3.0",
    "@celerity-sdk/runtime": "^0.2.2",
    "@celerity-sdk/telemetry": "^0.3.0",
    "@celerity-sdk/types": "^0.3.0"
  },
  "devDependencies": {
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.0"
  }
}
